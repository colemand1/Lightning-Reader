{
  "name": "Lightning Reader",
  "description": "Help's challenged readers get through content more thouroughly",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Lightning Reader"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "128": "icons/icon-128.png"
  }
}